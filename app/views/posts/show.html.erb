<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<hr>
<%= link_to "Edit Post", edit_post_path(@post)  %>
<%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: 'Are you sure you want to delete'}, :class => 'btn btn-sm btn-outline-danger btn_delete'  %>
<hr>
<h3>Comments</h3>
<% @post.comments.each do |comment| %>
	<%= comment.username %>
	<%= comment.body %>
<% end %>

<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.label :username %>
		<%= f.text_field(:username) %>
	</p>
	<p>
		<%= f.label :body %>
		<%= f.text_area(:body) %>
	</p>
	<p>
		
		<%= f.submit %>
	</p>

<% end %>